doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Animal Shelter
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1 Animal Shelter
    .row
      .small-8.columns
        form
          fieldset
            legend New Animal
            .row
              .small-4.columns
                label Name
                input#name(type='text' autofocus=true)
              .small-4.columns
                label Age
                input#age(type='text')
              .small-4.columns
                label Gender
                select#gender
                  option#male Male
                  option#female Female
            .row
              .small-6.columns
                label Species
                input#species(type='text')
              .small-6.columns
                label Color
                input#color(type='text')
            .row
              .small-9.columns
                label Photo
                input#photo(type='text', placeholder="Image URL")
              .small-3.columns
                label &nbsp;
                span.button.tiny.radius#add-photo Add Photo
            .row
              .small-12.columns
                label Description
                textarea#description(type='text')
            .row
              .small-12.columns
                button.radius#add-animal Add Animal
      .small-4.columns
        form
          fieldset
            legend Added Photos
            #photos
    .row
      .small-12.columns
        table#datatable
          thead
            tr
              th Name
              th Age
              th Gender
              th Species
              th Color
              th Description
              th Photos
          tbody

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/source/animal.js')
    script(src='/js/source/animal_factory.js')
    script(src='/js/source/main.js')
    script.
      $(document).foundation()

