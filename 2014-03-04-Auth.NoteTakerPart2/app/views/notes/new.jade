extends ../shared/template

block content
  .row
    .small-6.columns
      form(action='/notes', method='post')
        fieldset
          legend New Note
          .row
            .small-12.columns
              label Title
              input(type='text', autofocus=true, name='title')
          .row
            .small-12.columns
              label Body
              textarea(name='body')
          .row
            .small-12.columns
              label Created Date
              input(type='date', name='createdDate')
          .row
            .small-12.columns
              label Tags
              input(type='text', name='tags')
          .row
            .small-12.columns
              button.tiny.radius Save
    .small-6.columns

